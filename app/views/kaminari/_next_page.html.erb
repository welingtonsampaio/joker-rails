<%# Link to the "Next" page
  - available local variables
    url:           url to the next page
    current_page:  a page object for the currently displayed page
    total_pages:   total number of pages
    per_page:      number of items to fetch per page
    remote:        data-remote
-%>
<span class="next">
  <% url = url.concat('&content_only=true') unless url.include? 'content_only=true' %>
  <%= link_to_unless current_page.last?, t('views.pagination.next').html_safe, url, data:{jrender: jrender}, :rel => 'next', :remote => remote %>
</span>
