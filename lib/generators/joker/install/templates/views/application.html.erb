<!DOCTYPE html>
<html class="<%= '<%=' %> yield :class_body %> <%= '<%=' %> controller_name %> <%= '<%=' %> action_name %>">
<head>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= '<%=' %> content_for?(:title) ? yield(:title) : '<%= Rails.application.class.parent_name.titleize %>' %></title>
  <meta name="description" content="<%= '<%=' %> content_for?(:description) ? yield(:description) : '<%= Rails.application.class.parent_name.titleize %>' %>">
  <%= '<%=' %> stylesheet_link_tag "application", media: "all" %>
  <%= '<%=' %> javascript_include_tag "application" %>
  <%= '<%=' %> csrf_meta_tags %>
  <%= '<%=' %> translate_joker %>
</head>
<body class="<%= '<%=' %> yield :class_body %> <%= '<%=' %> controller_name %> <%= '<%=' %> action_name %>">
<%= '<%' %> if user_signed_in? %>
  <%= '<%=' %> render 'layouts/navigation' %>
  <%= '<%=' %> render 'layouts/messages' %>
<%= '<%' %> else %>
  <%= '<%=' %> yield %>
<%= '<%' %> end %>
<script type='text/javascript'>
  Joker.bootstrap()
</script>
</body>
</html>
